{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": ["types/*/**"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@components": ["components"],
      "@public/*": ["public/*"],
      "@public": ["public"],
      "@types/*": ["public"],
      "@styles/*": ["styles/*"],
      "@styles": ["styles"],
      "@lib/*": ["lib/*"],
      "@store/*": ["store/*"],
      "@store": ["store/"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/Login.tsx.old"
  ],
  "exclude": ["node_modules"]
}
